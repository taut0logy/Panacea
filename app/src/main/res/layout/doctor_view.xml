<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tablet_shape"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/doctorImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/doctor_male"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/doctorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dr. John Doe"
        android:ellipsize="end"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/doctorImage"
        app:layout_constraintTop_toTopOf="@+id/doctorImage" />

    <TextView
        android:id="@+id/doctorDepartment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:text="General Physician"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/doctorImage"
        app:layout_constraintTop_toBottomOf="@+id/doctorName" />

    <TextView
        android:id="@+id/doctorExperience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Experience: 5 years"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/doctorImage"
        app:layout_constraintTop_toBottomOf="@+id/doctorDepartment" />

    <TextView
        android:id="@+id/doctorAvailability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Availabile"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/doctorImage"
        app:layout_constraintTop_toBottomOf="@+id/doctorExperience" />

</androidx.constraintlayout.widget.ConstraintLayout>