<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item>
        <shape android:shape="oval">
            <size android:width="130dp" android:height="130dp"/> <!-- Slightly larger to create shadow effect -->
            <solid android:color="#40000000"/> <!-- More transparent black for shadow -->
        </shape>
    </item>

    <!-- Main circle with border -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/> <!-- Fill color -->
            <size android:width="120dp" android:height="120dp"/> <!-- Actual size of the circle -->
            <stroke
                android:width="4dp"
                android:color="#8048bf53"/> <!-- Semi-transparent border color -->
        </shape>
    </item>

</layer-list>

